<h1><strong>Editing Book</strong></h1>

<% if @book.errors.any? %>
<%= @book.errors.count %>error
<ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_with model:@book, url:book_path(@book.id), local:true do |f| %>
  <div class="field">
    <label>Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>